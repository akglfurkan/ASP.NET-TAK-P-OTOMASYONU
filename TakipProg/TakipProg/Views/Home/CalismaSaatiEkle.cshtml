@model TakipProg.Models.CalismaModel
@{
    /**/

    ViewBag.Title = "CalismaSaatiEkle";
    TakipProg.Models.DataContext db = new TakipProg.Models.DataContext();
}

@Html.ValidationSummary()
@using (Html.BeginForm())
{
<form class="form-horizontal">

    <div class="form-group">
        <label class="col-sm-2 control-label">Çalıştığınız Tarih</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(i => i.Gün, new { @class = "form-control", @placeholder = "Örn: 01.01.2019" })

        </div>
        <br />
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Başlangıç Mekik Sayısı</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(i => i.BaslananMekik, new { @class = "form-control", @placeholder = "Örn: 150" })

        </div>
        <br />
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Bitiş Mekik Sayısı</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(i => i.BitisMekik, new { @class = "form-control", @placeholder = "Örn: 350" })

        </div>
        <br />
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Çalışılan Makina</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(i => i.MakinaId,(SelectList)ViewBag.liste)
           
        </div>
        <br />
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Not</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(i => i.Not, new { @class = "form-control", @placeholder = "..." })

        </div>
        <br />
    </div>

    <br /><br />
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    </div>
</form>


}


